<?xml version="1.0" encoding="utf-8"?>
<com.example.biguncler.launcher.view.LockScreenLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_ll_lock_screen_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.biguncler.launcher.activity.LockSreenActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
        <com.example.biguncler.launcher.view.RoundImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:type="circle"
            app:borderRadius="2dp"
            />
         <TextView
            android:id="@+id/view_tv_lock_screen_date"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:textSize="30sp" />
        </LinearLayout>

    <TextView
        android:id="@+id/view_tv_lock_screen_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="00:00"
        android:textSize="70sp"/>

    </FrameLayout>

</com.example.biguncler.launcher.view.LockScreenLayout>
