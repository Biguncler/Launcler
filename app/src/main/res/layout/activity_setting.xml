<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.biguncler.launcher.activity.SettingActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:id="@+id/view_iv_blur_setting_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/layout_ll_setting_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
<!--BG_Style-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_tv_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="BACKGROUND STYLE"
                    android:textColor="@android:color/white"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/view_rg_bg_style"
                    android:layout_width="match_parent"
                    android:paddingLeft="6dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/view_bt_bg_style_blur"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="BLUR" />

                    <RadioButton
                        android:id="@+id/view_bt_bg_style_tint"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="TINT" />

                </RadioGroup>
            </LinearLayout>


            <!--Animation style-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/view_tv_show_apps"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text="ANIMATION STYLE"
                        android:textColor="@android:color/white"
                        android:paddingLeft="10dp"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/view_rg_show_apps"
                        android:layout_width="match_parent"
                        android:paddingLeft="6dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:id="@+id/view_bt_show_app_false"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="MUTED" />
                        <RadioButton
                            android:id="@+id/view_bt_show_app_true"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="STICKY" />

                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>
